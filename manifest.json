{
  "name": "Code Highlighter",
  "version": "1.2",
  "description": "Simply highlights any code inside a pre and code tag.",
  "author": "fides",
  "permissions": [
    "menus"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "highlight.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "242": "images/logo.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png"
    },
    "default_title": "Whereami?",
    "default_popup": "popup/menu.html"
  },
  "manifest_version": 2
}